@model ERP_V2.ViewModel.UserGroup.UserGroupModel

@Html.DevExpress().TextBoxFor(x => x.ID, s => { s.ClientVisible = false; }).GetHtml()
@Html.DevExpress().FormLayout(settings =>
{
    settings.Name = "EditForm";

    settings.SettingsAdaptivity.AdaptivityMode = FormLayoutAdaptivityMode.SingleColumnWindowLimit;
    settings.SettingsAdaptivity.SwitchToSingleColumnAtWindowInnerWidth = 600;
    settings.Styles.LayoutGroup.Cell.Paddings.PaddingRight = Unit.Pixel(0);
    settings.ColCount = 2;
    settings.UseDefaultPaddings = false;

    settings.Items.Add(i =>
    {
        i.Name = "NameCH";
        i.FieldName = "NameCH";
        i.Caption = Language.GroupNameCH;
        i.NestedExtension().TextBox(s =>
        {
            s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
            s.ShowModelErrors = true;
        });
    });
    settings.Items.Add(i =>
    {
        i.Name = "NameEN";
        i.FieldName = "NameEN";
        i.Caption = Language.GroupNameEN;
        i.NestedExtension().TextBox(s =>
        {
            s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
            s.ShowModelErrors = true;
        });
    });

}).Bind(Model).GetHtml()
